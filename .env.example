# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Sheets
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id

# Alertas (email)
GMAIL_FROM=you@gmail.com
ALERT_RECIPIENTS=you@gmail.com,spouse@gmail.com

# Calendar (opcional)
GOOGLE_CALENDAR_ID=primary
CREATE_CALENDAR_EVENTS=false

# Mobile offline mode (nova versao)
MOBILE_OFFLINE_MODE=false

# Google Apps Script Web App (sync sob demanda)
# Exemplo: https://script.google.com/macros/s/AKfycb.../exec
APPS_SCRIPT_WEB_APP_URL=
APPS_SCRIPT_APP_TOKEN=
