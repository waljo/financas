# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Sheets
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id

# Alertas (email)
GMAIL_FROM=you@gmail.com
ALERT_RECIPIENTS=you@gmail.com,spouse@gmail.com

# Calendar (opcional)
GOOGLE_CALENDAR_ID=primary
CREATE_CALENDAR_EVENTS=false

# SQLite local (producao com volume persistente)
LANCAMENTOS_CACHE_DB_PATH=/data/lancamentos.sqlite
CARTOES_DB_PATH=/data/cartoes.sqlite

# Seguranca opcional (Basic Auth para ambiente publico)
APP_BASIC_AUTH_USER=
APP_BASIC_AUTH_PASS=
